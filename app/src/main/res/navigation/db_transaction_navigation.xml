<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/db_transaction_navigation"
    app:startDestination="@id/emptyFragment">

    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.example.catalogoapp.ui.dbTransaction.fragments.EmptyFragment"
        android:label="fragment_empty"
        tools:layout="@layout/fragment_empty" >
        <action
            android:id="@+id/action_emptyFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_addCategoryFragment"
            app:destination="@id/addCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.catalogoapp.ui.dbTransaction.fragments.AddProductFragment"
        android:label="AddProductFragment" />
    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.example.catalogoapp.ui.dbTransaction.fragments.AddCategoryFragment"
        android:label="AddCategoryFragment" />

</navigation>