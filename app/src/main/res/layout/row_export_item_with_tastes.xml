<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        tools:src="@drawable/take_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Product name"
        app:layout_constraintStart_toEndOf="@id/image_item"
        app:layout_constraintTop_toTopOf="@id/image_item"
        android:layout_marginHorizontal="16dp"
        />

    <ImageView
        android:id="@+id/iv_colored_line"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_full_colored"
        android:backgroundTint="#ffa200"
        app:layout_constraintStart_toStartOf="@id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_unique_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_colored_line"
        app:layout_constraintStart_toEndOf="@id/image_item"
        tools:text="Price: R$2,50"
        />

    <TextView
        android:id="@+id/tv_taste_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_unique_price"
        app:layout_constraintEnd_toEndOf="@id/iv_colored_line"
        android:gravity="right"
        tools:text="Sabores"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/md_taste_title_to_tastes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_taste_title"
        app:layout_constraintEnd_toEndOf="@id/tv_taste_title"
        />

    <TextView
        android:id="@+id/tv_taste_list_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/md_taste_title_to_tastes"
        app:layout_constraintStart_toStartOf="@id/md_taste_title_to_tastes"
        app:layout_constraintEnd_toStartOf="@id/tv_taste_list_right"
        android:gravity="right"
        tools:text="
        teste - \n
        teste2 - \n
        teste3 - \n
        teste4 - \n
"
        />

    <TextView
        android:id="@+id/tv_taste_list_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/md_taste_title_to_tastes"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="@id/iv_colored_line"
        tools:text="
        teste - \n
        teste2 - \n
        teste3 - \n
        teste4 - \n
"
        />



</androidx.constraintlayout.widget.ConstraintLayout>